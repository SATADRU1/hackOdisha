# Database Configuration
POSTGRES_PASSWORD=hackodisha123
DATABASE_URL=postgresql://hackodisha:hackodisha123@postgres:5432/hackodisha

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Verbwire Integration
VERBWIRE_API_KEY=your-verbwire-api-key
VERBWIRE_BASE_URL=https://api.verbwire.com/v1

# BlockDAG Network Configuration
BLOCKDAG_NETWORK=alpha
BLOCKDAG_RPC_URL=localhost:8080
BLOCKDAG_P2P_PORT=4001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081
NEXT_PUBLIC_STUDIO_URL=http://localhost:3001
NEXT_PUBLIC_BLOCKDAG_URL=http://localhost:8080

# Service Ports
FRONTEND_PORT=3000
GOFR_BACKEND_PORT=8081
STUDIO_PORT=3001
BLOCKDAG_NODE_PORT=8080

# Environment
NODE_ENV=production
GIN_MODE=release

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@hackodisha.com

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_MINING_POOL=true
ENABLE_NFT_MARKETPLACE=true
ENABLE_SOCIAL_FEATURES=true
