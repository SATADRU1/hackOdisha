{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "scripts/**/*.ts",
    "test/**/*.ts",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}